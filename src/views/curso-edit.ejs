<%- include('includes/head')%>
    <%- include('includes/nav')%>


        <section>
            <div class="container pt-2 h-100">
                <div class="row justify-content-center">
                    <% if(curso._id) { %>
                    <div class="col-lg-6">
                        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                            <div class="card-body p-4 p-md-5">
                                <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Editando curso: <%= curso.nomeCurso %> </h3>
                                <%- include('includes/messages') %>
                                    <form action="/admin/edit/curso/<%= curso._id %>" method="POST">
                                        <input type="hidden" name="_csrf" value=<%=csrfToken%>>
                                        <div class="row">
                                            <div class="col-md-12 mb-2 pb-2">

                                                <div class="form-outline">
                                                    <input value="<%= curso.nomeCurso %>" type="text" id="name" class="form-control form-control-lg" name="nomeCurso" />
                                                    <label class="form-label" for="name">Nome do Curso</label>
                                                </div>

                                            </div>

                                        </div>
                                        <div class="row">
                                            <div class="col-md-12 mb-2 pb-2">
    
                                                <div class="form-outline">
                                                    <input value="<%= curso.pNome %>" type="text" id="name" name="pNome"
                                                        class="form-control form-control-lg" />
                                                    <label class="form-label" for="name">Professor</label>
                                                </div>
    
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12 mb-2 pb-2">
    
                                                <div class="form-outline">
                                                    <input value="<%= curso.pEmail %>" type="email" id="email" name="pEmail"
                                                        class="form-control form-control-lg" />
                                                    <label class="form-label" for="email">E-mail do professor</label>
                                                </div>
    
                                            </div>
                                        </div>
                                        <div class="mt-4 pt-2">
                                            <input class="btn btn-primary btn-lg" type="submit" value="Cadastrar Curso" />
                                        </div>

                                    </form>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        </section>
        <%- include('includes/footer')%>