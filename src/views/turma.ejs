<%- include('includes/head')%>
    <%- include('includes/nav')%>

        <section>
            <div class="container py-5 h-100">
                <div class="flex-wrap justify-content-between align-items-center">
                    <div class="col-20 align-items-center">
                        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                            <div class="card-body p-4 p-md-5">
                                <div class="row">
                                    <div class="col-lg-12 my-3">
                                        <h1 class="text-center">Sistema de Matriculas</h1>
                                        <h2 class="text-center"><%= turma.cursoTurma %> : <%= turma.codTurma %></h2>
                                        <p class="text-center lead">Os alunos dessa turma estão abaixo:</p>
                                        <%- include('includes/messages') %>
                                        <% if(alunos.length>0){ %>
                                            <div class="responsive-table">
                                                <table class="table my-3">
                                                    <tr>
                                                        <th>Nome</th>
                                                        <th>Código</th>
                                                        <th>Tel 1</th>
                                                        <th>Tel 2</th>
                                                        <th>Frequência</th>
                                                        <th></th>
                                                        <th></th>
                                                    </tr>
                                                    <% alunos.forEach(aluno=> { %>
                                                            <% if(aluno.turma1==turma.codTurma ||
                                                                aluno.turma2==turma.codTurma) { %>
                                                                    
                                                                <tr>
                                                                    <td>
                                                                        <%- aluno.name.split(' ').map((word) => word.charAt(0).toUpperCase() + word.slice(1)).join(' ') %>
                                                                    </td>
                                                                    <td>
                                                                        <%= aluno.codMatricula %>
                                                                    </td>
                                                                    <td>
                                                                        <%= aluno.telefone1 %>
                                                                    </td>
                                                                    <td>
                                                                        <%= aluno.telefone2 %>
                                                                    </td>
                                                                    <td>
                                                                        <p class="text-success">100%</p>
                                                                    </td>
                                                                    
                                                                    <td><a class="text-info" href="/matricula/consultar/<%=aluno._id%>">Visualizar</a>
                                                                    </td>
                                                                    <td><a class="text-info" href="/matricula/editar/<%=aluno._id%>">Editar</a>
                                                                    </td>
                                                                </tr>
                                                                <% }}); %>

                                                </table>
                                            </div>
                                            <% } else { %>
                                            <p class="text-center lead">Não existem turmas no seu curso.</p>
                                            <% }; %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <%- include('includes/footer')%>